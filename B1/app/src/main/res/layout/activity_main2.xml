<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét công cụ của Android Studio:"
        android:textSize="24sp"/>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radTuongDoiTot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tương đối tốt"
                android:textSize="24sp"/>

            <RadioButton
                android:id="@+id/radTot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tốt"
                android:textSize="24sp"/>
            <RadioButton
                android:id="@+id/radRatTot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuyệt vời"
                android:textSize="24sp"/>
            <RadioButton
                android:id="@+id/radTuyetVoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rất tuyệt vời"
                android:textSize="24sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:backgroundTint="#009688"/>

    <TextView
        android:id="@+id/txtVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chọn: "
        android:textSize="26sp"
        android:background="#F44336"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>